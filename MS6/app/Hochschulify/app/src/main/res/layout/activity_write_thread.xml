<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".activities.WriteThreadActivity">

    <include layout="@layout/toolbar" android:id="@+id/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/post_type"
        android:id="@+id/type_headline"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_padding"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginRight="@dimen/activity_padding"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_spinner"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginRight="@dimen/activity_padding"
        android:layout_alignTop="@+id/type_headline"
        android:layout_alignEnd="@+id/thread_title"
        android:layout_toEndOf="@+id/type_headline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_label"
        android:text="@string/title_label"
        android:textSize="@dimen/text_small"
        android:layout_below="@id/type_spinner"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginLeft="@dimen/activity_margin"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/thread_title"
        android:layout_below="@+id/title_label"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_label"
        android:text="@string/content_label"
        android:textSize="@dimen/text_small"
        android:layout_below="@id/thread_title"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginLeft="@dimen/activity_margin"/>

    <EditText
        android:id="@+id/thread_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_label"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:maxLines="6"
        android:lines="6"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/activity_padding"
        android:background="@color/colorWhite"
        android:padding="8dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommendLayout"
        android:orientation="horizontal"
        android:layout_below="@id/thread_input"
        android:layout_margin="@dimen/activity_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empfehlung:"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/thumbs_up"
            android:layout_marginLeft="@dimen/activity_margin"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/thumbs_down"
            android:layout_marginLeft="32dp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:text="@string/label_send"
        android:id="@+id/button_send"
        android:layout_below="@+id/recommendLayout"
        android:layout_marginTop="@dimen/activity_margin"
        android:background="@color/colorAccent"
        android:layout_alignParentStart="true" />



</RelativeLayout>
