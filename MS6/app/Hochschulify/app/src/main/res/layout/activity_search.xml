<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SearchActivity">

    <include layout="@layout/toolbar" android:id="@id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="16dp">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_padding"
            android:id="@+id/searchView"
            android:queryHint="Suchbegriff"
            android:layout_weight="1"
            android:iconifiedByDefault="false" />

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:scaleType="fitCenter"
            android:id="@+id/geoSearch"
            android:background="@android:color/transparent"
            android:src="@drawable/map_marker"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/courseResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keine Ergebnisse gefunden"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:id="@+id/noResultsText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mit deiner aktuellen Position kannst du auch nach StudiengÃ¤ngen in deiner Umgebung suchen."
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:visibility="visible"
        android:id="@+id/noSearchText"/>


</LinearLayout>
