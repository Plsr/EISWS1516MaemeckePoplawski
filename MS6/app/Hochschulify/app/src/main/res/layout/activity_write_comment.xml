<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.WriteCommentActivity">



        <include layout="@layout/toolbar" android:id="@+id/toolbar" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Antwort auf Bob Ross"
            android:textStyle="bold"
            android:id="@+id/answer_to"
            android:layout_marginTop="@dimen/activity_padding"
            android:layout_marginLeft="@dimen/activity_padding"
            android:layout_marginRight="@dimen/activity_padding"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_label"
            android:text="@string/content_label"
            android:textSize="@dimen/text_small"
            android:layout_below="@id/thread_title_input"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"/>

        <EditText
            android:id="@+id/thread_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_label"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:maxLines="6"
            android:lines="6"
            android:layout_marginLeft="@dimen/activity_padding"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/activity_padding"
            android:background="@color/colorWhite"
            android:padding="8dp"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:text="@string/label_send"
            android:id="@+id/button_send"
            android:layout_below="@+id/recommendLayout"
            android:layout_marginTop="@dimen/activity_margin"
            android:background="@color/colorAccent"
            android:layout_alignParentStart="true" />



</LinearLayout>